# Environment Variables for Interview Assistant

# OpenAI API Key for Whisper transcription and context-aware AI responses
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Google AI API Key for Gemini (alternative AI provider)
# Get from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# Security Configuration
SECRET_KEY=your_super_secret_key_change_this_in_production_minimum_32_characters

# Database Configuration
# For development (SQLite)
DATABASE_URL=sqlite:///./interview_assistant.db

# For production (PostgreSQL - use this in Docker)
# DATABASE_URL=postgresql+asyncpg://interview_user:interview_password_2024@postgres:5432/interview_assistant

# Redis Configuration (for enhanced caching)
REDIS_URL=redis://redis:6379/0

# Application Settings
ENVIRONMENT=development
DEBUG=true

# Session Configuration
SESSION_EXPIRE_HOURS=24
MAX_ACTIVE_SESSIONS=100

# AI Response Configuration
AI_MODEL=gpt-3.5-turbo
MAX_CONTEXT_MESSAGES=10
AI_TEMPERATURE=0.7

# Caching Configuration
CACHE_TTL_SECONDS=3600
MAX_CACHE_SIZE=1000

# Performance Settings
UVICORN_WORKERS=1
MAX_WEBSOCKET_CONNECTIONS=500